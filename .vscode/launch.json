{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/cpp_template", // 你的可执行文件的路径
            "args": [], // 程序运行时的命令行参数
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}", // 当前工作目录
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake Build", // 在调试前运行CMake构建任务
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
